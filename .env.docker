# Docker Environment Configuration Template
# Copy this to .env for local docker development

# Spotify OAuth Configuration (PKCE - no client secret needed)
SPOTIFY_CLIENT_ID=your_spotify_client_id_here
SPOTIFY_REDIRECT_URI=http://localhost:3001/callback

# Server Configuration
PORT=3001
SESSION_SECRET=your_session_secret_here
JWT_SECRET=your_jwt_secret_here
NODE_ENV=production

# Client Configuration
CLIENT_URL=http://localhost:5173

# Redis Configuration (for Docker)
REDIS_HOST=redis
REDIS_PORT=6379
# REDIS_PASSWORD=your_redis_password_here
# REDIS_DB=0

# LLM API Keys (at least one required)
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Google AI Direct API (optional)
GOOGLE_API_KEY=your_google_api_key_here
ENABLE_GEMINI_DIRECT=true
GEMINI_SEARCH_GROUNDING=true

# Additional LLM API Keys (optional)
# ANTHROPIC_API_KEY=your_anthropic_api_key_here
# OPENAI_API_KEY=your_openai_api_key_here

# Client Configuration (build args)
VITE_API_URL=http://localhost:3001
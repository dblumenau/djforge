# Spotify OAuth Configuration (PKCE - no client secret needed)
SPOTIFY_CLIENT_ID=your_spotify_client_id_here
SPOTIFY_REDIRECT_URI=http://127.0.0.1:3001/callback

# Server Configuration
PORT=3001
SESSION_SECRET=your_session_secret_here
JWT_SECRET=your_jwt_secret_here

# Client Configuration (optional)
CLIENT_URL=http://127.0.0.1:5173

# LLM API Keys (at least one required)
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Google AI Direct API (optional)
GOOGLE_API_KEY=your_google_api_key_here
ENABLE_GEMINI_DIRECT=true
GEMINI_SEARCH_GROUNDING=true

# Redis Configuration (optional - defaults to localhost:6379)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=
# REDIS_DB=0

# Additional LLM API Keys (optional)
# ANTHROPIC_API_KEY=your_anthropic_api_key_here
# OPENAI_API_KEY=your_openai_api_key_here

# Production Configuration (optional)
# NODE_ENV=production
# ALLOWED_ORIGINS=https://your-domain.com